---
import {Image} from 'astro:assets';
import {Breadcrumbs} from 'astro-breadcrumbs';
import gremlin from '../../public/gremlin.png';
import '../styles/breadcrumbs.css';
---
<header>
    <Image
        src={gremlin}
        alt="site logo"
        width="64"
        loading="eager"
    />
    <Breadcrumbs />
</header>

<style>
    header {
        display: flex;
        flex-direction: row;

        align-items: center;

        grid-row: 1;

        color: var(--primary);
    }
</style>