---
import {Image} from 'astro:assets';
import gremlin from '../../public/gremlin.png';
---
<header>
    <Image
        src={gremlin}
        alt="site logo"
        width="64"
    />
    <slot />
</header>

<style>
    header {
        display: flex;
        flex-direction: column;
        justify-content: center;

        grid-row: 1;
        grid-column: 1/3;
    }
</style>