---
import '../styles/global.css';

interface Props {
    section: string;
    description: string;
}

const {section, description} = Astro.props;
---
<section class="main-content-wrapper">
    <slot name="sidebar"/>
    <section class="main-section">
        <div class="section-title">
            <h1>{section}</h1>
            <p>{description}</p>
        </div>
        <main>
            <slot name="main"/>
        </main>
    </section>
</section>

<style>
    .main-content-wrapper {
        display: flex;
        flex-direction: row;
        column-gap: 1em;
    }

    .main-section {
        height: 80vh;
        border: 2px solid var(--primary);

        flex-grow: 1;
    }

    .section-title {
        display: flex;
        flex-direction: row;
        align-items: end;
        
        color: var(--primary);

        border-bottom: 2px solid var(--primary);

        padding: .5em;
    }

    .section-title h1, p{
        margin:0;
    }

    .section-title h1 {       
        margin-right: 1em;
        line-height: 1;
    }

    .main-section {
        overflow-y: scroll;
    }

</style>
